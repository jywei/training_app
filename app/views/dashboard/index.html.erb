<div class="jumbotron">
  <h1>Work Out Hard!</h1>
  <p>Eat clean, train dirty!</p>
</div>

<div class="row">
  <div class="col-md-10">
    <h2>Strivers' List</h2>
    <%= will_paginate @strivers, renderer: BootstrapPagination::Rails, class: "pull-left paginate" %>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @strivers.each do |striver| %>
      <div class="col-md-10 well member">
        <%= striver.full_name %>
        <% if current_user && !current_user.follows_or_same?(striver) %>
          <%= link_to "Follow", friendships_path(friend_id: striver.id), method: :post,
            class: "btn btn-primary btn-sm pull-right" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
