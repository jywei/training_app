<div class="container">
  <div class="row search-result">
    <% @strivers.each do |striver| %>
      <div class="col-md-4 col-md-offset-4 well member">
        <%= striver.full_name %>
        <% if current_user && !current_user.follows_or_same?(striver) %>
          <%= link_to "Follow", friendships_path(friend_id: striver.id), method: :post,
            class: "btn btn-primary btn-sm pull-right" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<%= will_paginate @strivers, renderer: BootstrapPagination::Rails %>
